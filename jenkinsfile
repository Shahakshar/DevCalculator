pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "akdev6298/mycalculator:latest"
    }
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Shahakshar/DevCalculator.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'sudo docker build -t devcalculator .'
            }
        }
        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'credentialsId', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh 'echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin'
                    sh 'sudo docker tag devcalculator $DOCKER_IMAGE'
                    sh 'sudo docker push $DOCKER_IMAGE'
                }
            }
        }
    }
}
