pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Shahakshar/DevCalculator.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'sudo docker build -t devcalculator .'
            }
        }
        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: '', url: '']) {
                    sh 'docker tag Devcalculator akdev6298/mycalculator:latest'
                    sh 'docker push akdev6298/mycalculator:latest'
                }
            }
        }
    }
}

